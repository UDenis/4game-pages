.pRatings {
  &--controls {

    &--radiolist {
      display: inline-block;
      vertical-align: middle;
      border-radius 5px;
      box-shadow 0 2px 4px -1px rgba(153, 153, 153, .7);
      font-size: 0

      & input[type=radio] {
        display: none;

        & + label {
          display: inline-block;
          position: relative;
          padding: 7px 18px;
          font-size: 16px;
          font-family: Arial, Sans-Serif;
          color: #000;
          text-overflow: ellipsis;
          background-color: #f6f6f6;
          background-image: -moz-linear-gradient(center top, #fefefe 0%, #eee 100%);
          border: 1px solid #acacac;
          border-right: none;
          cursor: pointer;

          &.first {
            border-radius 5px 0 0 5px;
          }

          &.last {
            border-radius 0 5px 5px 0;
            border-right: 1px solid #acacac;
          }

        }

        &:checked {

          & + label {
            background: #e1e1e1;
            box-shadow 0 2px 4px -1px rgba(153, 153, 153, .7) inset, 0 5px 6px 0 #fff;
            cursor: default;
          }

        }
      }


      &-tooltip {
        display:none;
      }

      &-item {
        display: inline-block;
        position: relative;

        &:hover {
          & .pRatings--controls--radiolist-tooltip {
            display: block;
            position: absolute;
            font-size: 16px;
            background: #fff;
            box-shadow 0 2px 4px -1px rgba(153, 153, 153, .7) inset, 0 5px 6px 0 #fff;
            padding: 12px 10px;
            border-radius: 5px;
            border:1px solid #DCA;
            top:46px;
            background: #fffAF0;
            min-width:220px;
            
            &:before{
              content: '';
              position: absolute;
              display: inline-block;
              border: 1px solid #DCA;
              border-right: 0;
              border-bottom: 0;
              transform: rotate(45deg);
              width: 13px;
              height: 13px;
              top: -8px;
              left: 38px;
              background :#fffAF0;
              box-shadow: 3px 3px 6px -2px rgba(153,153,153,0.7) inset, 0 0px 0px 0 #fff;
            }
          }
        }
      }
    }

    &--selector {
      display: inline-block;
      font: 700 18px / 24px 'PT Sans', 'Trebuchet MS', Arial, sans-serif;
      margin-left: 70px;

      & label {
        vertical-align: middle;
      }

      &--holder {
        display: inline-block;
        vertical-align: middle;
        min-width: 130px;
        text-align: left;
      }

      &--input {
        position: relative;
        display: block;
        outline: #fff solid 0;
        -webkit-user-select: none;
        vertical-align: middle;
        min-width: 130px;
        text-align: left;

        &-opened {
          & .pRatings--controls--selector--popup {
            display:block;
          }
        }
      }

      &--caption {
        position: relative;
        z-index: 15;
        font: 16px / 19px Arial, sans-serif;
        color: #000;
        cursor: pointer;
        overflow: hidden;
        text-overflow: ellipsis;

        transition box-shadow .27s, background .5s;

        display: block;
        border: 1px solid #acacac;
        padding: 7px 20px 7px 8px;
        width: 100%;

        box-sizing border-box;

        border-radius 5px;

        box-shadow 0 2px 4px -1px rgba(153, 153, 153, .7);

        background-image: url("data:image/svg+xml;base64,PD94bWwgdmVyc2lvbj0iMS4wIiA/Pgo8c3ZnIHhtbG5zPSJoâ€¦iIGhlaWdodD0iMSIgZmlsbD0idXJsKCNncmFkLXVjZ2ctZ2VuZXJhdGVkKSIgLz4KPC9zdmc+");
        background-color: #f6f6f6;

        background-image: -moz-linear-gradient(top, #fefefe 0%, #eee 100%);
        background-image: -webkit-gradient(linear, left top, left bottom, color-stop(0%, #fefefe), color-stop(100%, #eee));
        background-image: -webkit-linear-gradient(top, #fefefe 0%, #eee 100%);
        background-image: -o-linear-gradient(top, #fefefe 0%, #eee 100%);
        background-image: -ms-linear-gradient(top, #fefefe 0%, #eee 100%);
        background-image: linear-gradient(top, #fefefe 0%, #eee 100%);

      }

      &--arrow {
        position: absolute;
        z-index: 20;
        top: 50%;
        right: 10px;
        width: 7px;
        height: 16px;
        margin-top: -8px;
        cursor: pointer;
        background-repeat: no-repeat;
        background-image: url("data:image/png;base64,");
      }

      &--popup {
        position: absolute;
        display: none;
        z-index: 10;
        left: 0;
        right: 0;
        padding: 10px 0;
        border-radius 5px;
        box-shadow 0 0 6px 0 #747474;
        background: #f6f6f6;

      }


      &--item {
        display: block;
        cursor: pointer;
        font: 16px/19px Arial, sans-serif;
        padding: 3px 8px;

        &:hover {

        }

        &-selected {
          font-weight: bold;
        }
      }
    }


    &--search {
      display: inline-block;
      position: relative;
      float: right;

      & input[type=search] {
        width: 216px;
        padding: 7px 18px;
        font: 16px / 19px Arial, Sans-Serif;
        color: #000;
        text-overflow: ellipsis;
        border: 1px solid #acacac;
        border-radius 20px;
        background: #e1e1e1;
        box-shadow 0 2px 4px -1px rgba(153, 153, 153, .7) inset;
        -webkit-appearance: none;
        background-image: -moz-linear-gradient(90deg, rgb(255, 255, 255) 0%, rgb(247, 247, 247) 100%);
        background-image: -webkit-linear-gradient(90deg, rgb(255, 255, 255) 0%, rgb(247, 247, 247) 100%);
        background-image: -ms-linear-gradient(90deg, rgb(255, 255, 255) 0%, rgb(247, 247, 247) 100%);

        &:focus {
          outline: none;
          box-shadow 0px 0px 4px 3px rgba(99, 176, 252, 1);
        }
      }
    }


    &--choice {
      display: inline-block;
      cursor: pointer;
      color: #1663b3;
      border-bottom: 1px dotted #1663b3;
      position: relative;

      &--arrow {
        display: inline-block;
        position: absolute;
        border: 8px solid transparent;
        border-top: 0;
        border-bottom: 8px solid #1663b3;
        box-sizing: border-box;
        top: 18px;
        transition: transform 0.2s ease-out;
      }

      &--popup {
        border-radius: 5px;
        position: absolute;
        z-index: 50;
        padding: 15px 24px;
        margin-top: 10px;
        font: 14px / 16px Arial;
        text-align: left;
        background-color: #fff;
        box-shadow: 0 5px 22px rgba(0, 0, 0, 0.65);
        cursor: default;
        display: none;
        transition: block 2 ease-in-out;

        &--arrow {
          left: 50%;
          position: absolute;
          top: -9px;
          border-right: 19px solid rgba(0, 0, 0, 0);
          border-bottom: 19px solid #FFF;
          border-left: 19px solid rgba(0, 0, 0, 0);
          margin-left: -19px;
        }

      }

      &--item {
        font: 14px/24px Arial;
        display: block;
        color: #2963d6;
        cursor: pointer;

        &:hover {
          color: red;
        }

        &-selected {
          color: #000;
          font-weight: bold;
          &:hover {
            color: #000;
          }
        }
      }

      &-opened {
        & .pRatings--controls--choice--popup {
          display: block;
        }

        & .pRatings--controls--choice--arrow {
          transform: rotate(180deg);
        }
      }
    }

  }
}