.pRatings {
  &--table {
    width: 100%;
    margin: 30px 0 0 0;
    border-spacing: 0;

    &--header-cell {
      padding: 15px 15px 15px 0;
      font: 700 15px / 20px 'PT Sans', 'Trebuchet MS', Arial, sans-serif;
      text-align: left;
      white-space: nowrap;
      border-bottom: 1px solid #b2b2b2;

      &-sortable {
        cursor: pointer;
        color: #1663b3;
      }

      &-right {
        text-align: right;
      }

      & div {
        display: inline-block;
        vertical-align: middle;

        & span {
          border-bottom: 1px dotted;
        }
      }

      &--arrows {
        position: relative;
        display: inline-block;
        width: 0;
        height: 1em;

        &:before {
          position: absolute;
          top: 0;
          right: 0;
        }

        &-asc {

        }

        &-desc {
          width: 1.5em;
          font-size: 8px;
          vertical-align: 4px;

          &:before {
            content: 'â–¼';
          }
        }

      }
    }

    &--cell {
      padding: 8px 15px 8px 0;
      font: 13px / 16px Arial, Sans-Serif;
      white-space: nowrap;

      &-right {
        text-align: right;
      }
    }

    &--row {
      &:hover {
        & .pRatings--table--cell {
          color: #987324;
          background-color: #f4efe0;
          cursor: pointer;
        }
      }

      &-selected {
        & .pRatings--table--cell {
          background-color: #ecf1f8;
          cursor: pointer;
        }
      }
    }
  }
}